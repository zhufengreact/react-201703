fullScreen() {
    width: 100%
    height: 100%
    overflow: hidden
}

box() {
    display: flex
}
flex() {
    flex: 1
}
boxDirection() {
    flex-direction: column
}


html,
body,
#app
    fullScreen()

a
    text-decoration: none


.content
    height: 100%
    margin: 0 auto
    padding: 0 16px

.text-right
    text-align: right

.active
    color: red


.box
    box()
    boxDirection()

.box-flex
    flex()

footer
    border-top: 1px solid #ccc

footer a
    float: left
    width: 50%
    line-height: 42px
    text-align: center
